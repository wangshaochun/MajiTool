{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install blog deps",
			"type": "shell",
			"command": "npm",
			"args": [
				"i",
				"pg",
				"react-markdown",
				"remark-gfm"
			],
			"group": "build"
		},
		{
			"label": "Dev server",
			"type": "shell",
			"command": "npm",
			"args": [
				"run",
				"dev"
			],
			"problemMatcher": [
				"$tsc"
			],
			"group": "build"
		},
		{
			"label": "Install PDF deps",
			"type": "shell",
			"command": "npm",
			"args": [
				"install",
				"html2canvas",
				"jspdf"
			],
			"isBackground": false,
			"group": "build"
		},
		{
			"label": "Install PDF types",
			"type": "shell",
			"command": "npm",
			"args": [
				"install",
				"-D",
				"@types/html2canvas",
				"@types/jspdf"
			],
			"isBackground": false,
			"group": "build"
		}
	]
}